<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_one"
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_news"
                android:text="新闻"/>
            <TextView
                android:id="@+id/tv_menu_two"
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_read"
                android:text="订阅" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_local"
                android:text="本地" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_ties"
                android:text="跟帖" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_pics"
                android:text="图片" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_ugc"
                android:text="话题" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_vote"
                android:text="投票" />
            <TextView
                style="@style/left_menu_text"
                android:drawableLeft="@drawable/tab_focus"
                android:text="聚合读物" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>